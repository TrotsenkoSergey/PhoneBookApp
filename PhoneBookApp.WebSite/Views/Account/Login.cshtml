@model PhoneBookApp.WebSite.AuthModels.UserLogin

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>

            <form asp-controller="Account" asp-action="Login" method="post"
                  asp-route-returnUrl="@ViewBag.returnUrl" asp-antiforgery="true" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <label asp-for="LoginProp"></label>
                        <input asp-for="LoginProp" class="form-control" placeholder="Введите логин" />
                        <span asp-validation-for="LoginProp" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Введите пароль" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <label asp-for="IsRemembered" />
                        <input type="checkbox" asp-for="IsRemembered" class="form-control" />
                    </div>
                </div>

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Войти</button>
                </div>
            </form>

        </div>
    </div>
</div>